// En løkke er en gentagelse udførelse af en kommando igen og igen. hvor mange gange løkken udføres er afhænger af et logisk udtryk

void setup() {
  size(500, 500);
}

void draw() {
  //et eksempel på et loop er et forloop. Dette forloop går igennem og tegner firekanter på skærmen
  for (/* her deklare du en variabel */int x = 0; /* det er betingelsen for hvornår loop skal gøre */ x<50; /* dette er hvad du skal med variablen efter den har kørt looped */x++) {
    //der kan godt være flere loop i et loop
    for (int y = 0; y<50; y++) {

      fill(100+x,100+y,255-x-y);
      rect(x*10, y*10, 10, 10);
    }
  }

  //der er også while loop som kun gøre imens et bestemt statement er sandt
  int i = 0;
  while (i < 5) {
    System.out.println(i);
    i++;
  }
}

